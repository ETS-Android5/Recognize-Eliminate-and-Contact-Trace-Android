<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itmLoc_cardMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/itmNotif_imgIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_generic"
            app:tint="#427EDA"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/itmNotif_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/itmNotif_imgIcon"
            android:fontFamily="@font/asap"
            android:text="HH:MM AA" />

        <TextView
            android:id="@+id/itmNotif_txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itmNotif_txtTime"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_toEndOf="@id/itmNotif_imgIcon"
            android:fontFamily="@font/asap"
            android:text="This is a message" />

        <TextView
            android:id="@+id/itmNotif_txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/asap"
            android:text="MM/DD" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>