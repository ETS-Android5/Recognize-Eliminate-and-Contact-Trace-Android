<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itmLoc_cardMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/itmLoc_imgIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:tint="#427EDA"
            app:srcCompat="@drawable/ic_location"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/itmLoc_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/itmLoc_imgIcon"
            android:fontFamily="@font/asap"
            android:text="HH:MM AA" />

        <TextView
            android:id="@+id/itmLoc_txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itmLoc_txtTime"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_toEndOf="@id/itmLoc_imgIcon"
            android:fontFamily="@font/asap"
            android:text="You have entered location" />

        <TextView
            android:id="@+id/itmLoc_txtInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/asap"
            android:text="See Details >"
            android:textColor="@color/primary_color" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>